include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        section.parallax
          - for (var i = 1; i <= 6; i++)
            .parallax__layer(data-speed=`${i<6? i/100*9: ''}`)
              picture
                source(srcset=require(`images/parallax/${i}_2560.png`).default media="(min-width: 1920px)").parallax__image
                img(srcset=require(`images/parallax/${i}.png`).default).parallax__image


        section.hero
          .container.hero__container
            header.header
              .header__logo
                .logo П.С.
              .header__btns
                nav.menu
                  -var items = ['Главная', 'Обо мне',' Навыки','Работы','Отзывы','Связаться'];
                  ul.menu__list
                    each item in items
                      li.menu__item
                        a.menu__link #{item}
              .header__links
                -var icons = ['insta','vk','github'];
                ul.socials
                  each item in icons
                    li.socials__item
                      a(href="" target="_blank").socials__link
                        +icon(item, "socials__icon")
            .hero__content 
              .user-data
                .user-data__desc Личный сайт <br> веб-разработчика
                .user-data__name Павел <br>   &nbspСысоев
            a(href="#").hero__bottom-btn.scroll-down-btn Скролл
              +icon('scroll', "scroll-down-btn__icon")
        section.triangles.welcome-section__triangles
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").trinagles__item.triangle
            polygon(points="0,0 0,100 1000,100")
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").trinagles__item.triangle
            polygon(points="1000,0 1000,100 0,100")
      section.about
        .container
          .about-info 
            .about__user-data
              .user-info
                .user-info__avatar
                  .avatar
                    +image("content/user.jpg","avatar__img","avatar__img")
                .user-info__content
                  -
                    var userdata=[
                      ["Проживаю","Санкт-Петербург"],
                      ["Возраст", "25 лет"],
                      ["Родился", "20 ноября 1996"]
                    ];
                  table.user-info__table
                    each row in userdata 
                      tr
                        td.user-info__table-title #{row[0]}
                        td #{row[1]}
            .about__content
              .about__disclamer Привет, меня зовут
              h2.about__title Павел Сысоев
              .about__desc
                p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
              .about__ps
                p Этот сайт я сделал в рамках обучения. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!                  
      section.values 
        .container.values__container
          .values__title 
            .longtitle
              h2.longtitle__text Чем я могу быть полезен вам
              p.longtitle__decs Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
          .values__widget
            #skills-component 

      section.works
        .container.works__container
          h2.section__title.section__title-black.works__section-title Мои работы
          .works__content
            #slider-component
      section.contacts
        .container.contacns__container
          .reviews-section
            h2.section__title.reviews-section__title Что обо мне говорят
            .reviews-section__content
              #reviews-slider-component



          .contacts__form
            .form
              .form__title
                h2.form__title-text.section__title Связаться со мной
              form.form__element
                .form__row
                  label.form-block
                    .form-block__title Введите ваше имя
                    .form-block__field
                      +icon('user','form-block__icon')
                      input(type="text" placeholder="Илон Маск").form-block__input
                  label.form-block
                    .form-block__title Введите ваш email
                    .form-block__field
                      +icon('envelope','form-block__icon')
                      input(type="text" placeholder="ilon_mask@gmail.com").form-block__input
                .form__row.form__row-long
                  label.form-block
                    .form-block__title Сообщение к письму
                    .form-block__field
                      +icon('message','form-block__icon')
                      textarea(placeholder="Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса").form-block__input.form-block__textarea

                .form__row
                  input(type="submit" value="Отправить").form__submit

      footer.footer
        .container.footer__container
          .footer__copyright
            .footer__copyright-col
              .footer__copyright-year © 2022
            .footer__copyright-userinfo
              .footer__copyright-name Павел <br> Сысоев
              .footer__copyright-desc Личный сайт <br> веб-разработчика
          .footer__data
            nav.menu.footer__data-menu
              - var items = ['Главная', 'Обо мне',' Навыки','Работы','Отзывы','Связаться'];
                ul.menu__list
                  each item in items
                    li.menu__item
                      a.menu__link #{item}
            .footer__content
              .footer__content-right
                .footer__content-right-text
                  p Этот сайт я сделал в рамках обучения
                .footer__social.social
                  -var icons = ['insta','vk','github'];
                    ul.socials
                      each item in icons
                        li.socials__item
                          a(href="" target="_blank").socials__link
                            +icon(item, "socials__icon")
              .footer__content-left
                .footer__content-left-text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                .footer__content-left-autor Martin Golding

    include ./templates/entry.pug

