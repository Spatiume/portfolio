.fullscreen-menu {
  position: fixed;
  display: none;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  background-color: $background-color;
  z-index: 100;
  justify-content: center;
}

.active {
  display: flex;
}

.fullscreen-menu__close {
  top: 8%;
  right: 5%;
  width: 30px;
  height: 30px;
}