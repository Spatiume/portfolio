.closebtn {
  display: block;
  position: absolute;
  width: 50px;
  height: 50px;


  &::before,
  &::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 15%;
    height: 130%;
    border-radius: 100px;
    background-color: $text-color;
  }

  &::before{
    transform: rotate(45deg);
  }
  &::after{
    transform: rotate(-45deg);
  }
}