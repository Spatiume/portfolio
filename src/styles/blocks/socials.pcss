.socials{
  display: flex;
}

.socials__item{
  margin-right: 40px;

  &:last-child{
    margin-right: 0;
  }
}


.socials__link{
  height: 28px;
  width: 28px;
  display: block;
  opacity: 0.5;

  &:hover, &:focus{
    opacity: 1;
  }
}

.socials__icon{
 fill:currentColor;
 width: 100%;
 height: 100%;
}